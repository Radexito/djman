{
  "name": "dj_manager",
  "version": "1.0.2",
  "description": "DJ-focused music library manager",
  "main": "src/main.js",
  "scripts": {
    "react": "cd renderer && npm run dev",
    "electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently -k \"npm:react\" \"npm:electron\"",
    "build-renderer": "cd renderer && npm run build",
    "build": "npm run build-renderer",
    "electron-prod": "NODE_ENV=production electron .",
    "postinstall": "electron-rebuild",
    "dist": "npm run build-renderer && electron-builder",
    "dist:linux": "npm run build-renderer && electron-builder --linux",
    "dist:win": "npm run build-renderer && electron-builder --win",
    "dist:mac": "npm run build-renderer && electron-builder --mac"
  },
  "build": {
    "appId": "com.djmanager.app",
    "productName": "DJ Manager",
    "directories": {
      "buildResources": "build-resources",
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "python/**/*",
      "renderer/dist/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!**/*.map"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio",
      "extraResources": [
        {
          "from": "ffmpeg/",
          "to": "ffmpeg"
        },
        {
          "from": "build-resources/analysis",
          "to": "analysis"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.music",
      "extraResources": [
        {
          "from": "ffmpeg/",
          "to": "ffmpeg"
        },
        {
          "from": "build-resources/analysis",
          "to": "analysis"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "extraResources": [
        {
          "from": "ffmpeg/",
          "to": "ffmpeg"
        },
        {
          "from": "build-resources/analysis.exe",
          "to": "analysis.exe"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Radexito/djman.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Radexito/djman/issues"
  },
  "homepage": "https://github.com/Radexito/djman#readme",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.8.1",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "better-sqlite3": "^12.6.2",
    "react-virtualized": "^9.22.6",
    "react-window": "^2.2.5"
  }
}
