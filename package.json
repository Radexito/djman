{
  "name": "dj_manager",
  "version": "1.0.8",
  "description": "DJ-focused music library manager",
  "main": "src/main.js",
  "scripts": {
    "react": "cd renderer && npm run dev",
    "electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently -k \"npm:react\" \"npm:electron\"",
    "build-renderer": "cd renderer && npm run build",
    "build": "npm run build-renderer",
    "electron-prod": "NODE_ENV=production electron .",
    "postinstall": "electron-builder install-app-deps",
    "postdev-rebuild": "npx @electron/rebuild -f -w better-sqlite3",
    "prepare": "husky",
    "dist": "npm run build-renderer && electron-builder",
    "dist:linux": "npm run build-renderer && electron-builder --linux",
    "dist:win": "npm run build-renderer && electron-builder --win",
    "dist:mac": "npm run build-renderer && electron-builder --mac",
    "lint": "eslint src/",
    "lint:all": "npm run lint && cd renderer && npm run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pretest": "npm rebuild better-sqlite3",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "posttest": "npx @electron/rebuild -f -w better-sqlite3"
  },
  "build": {
    "appId": "com.djmanager.app",
    "productName": "DJ Manager",
    "directories": {
      "buildResources": "build-resources",
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "renderer/dist/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!**/*.map"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Audio",
      "extraResources": [],
      "artifactName": "${productName}-${version}-Linux.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.music",
      "extraResources": []
    },
    "win": {
      "target": "nsis",
      "extraResources": []
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Radexito/djman.git"
  },
  "keywords": [
    "music",
    "music-player",
    "music-library",
    "dj",
    "mixxx",
    "library-management-system",
    "traktor",
    "music-player-application",
    "organizing-tools",
    "dj-tools",
    "electron",
    "rekordbox",
    "bpm",
    "audio-analysis"
  ],
  "author": {
    "name": "Radexito",
    "email": "ceo@rwtechworks.pl"
  },
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Radexito/djman/issues"
  },
  "homepage": "https://github.com/Radexito/djman#readme",
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "renderer/src/**/*.{js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "**/*.css": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^10.0.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.3.0",
    "prettier": "^3.8.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "better-sqlite3": "^12.6.2",
    "react-virtualized": "^9.22.6",
    "react-window": "^2.2.5"
  }
}
